{
  "id": "Socket_OutputStreamUnavailable",
  "category": "ERE",
  "ir": {
    "type": "ere",
    "events": [
      {
        "name": "create_connected",
        "timing": "after"
      },
      {
        "name": "create_unconnected",
        "timing": "after"
      },
      {
        "name": "connect",
        "timing": "before"
      },
      {
        "name": "get",
        "timing": "before"
      },
      {
        "name": "close",
        "timing": "before"
      },
      {
        "name": "shutdown",
        "timing": "before"
      }
    ],
    "pattern": "(create_connected | create_unconnected connect) get* (close | shutdown)*",
    "violation_message": "An output stream is unavailable if the socket is closed, is not connected, or the socket output has been shutdown."
  }
}