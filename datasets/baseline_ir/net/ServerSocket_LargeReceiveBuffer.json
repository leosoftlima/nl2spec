{
  "id": "ServerSocket_LargeReceiveBuffer",
  "category": "ERE",
  "ir": {
    "type": "ere",
    "events": [
      {
        "name": "create_bound",
        "timing": "after"
      },
      {
        "name": "create_unbound",
        "timing": "after"
      },
      {
        "name": "bind",
        "timing": "before"
      },
      {
        "name": "set",
        "timing": "before"
      }
    ],
    "pattern": "(create_bound | create_unbound set* bind+) set",
    "violation_message": "A receive window large than 64K bytes must be set before the server socket is bound."
  }
}