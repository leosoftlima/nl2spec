            "\t\tif (length + offset <= buffer.length)",
            "\t\t\treturn;",
            "\t\tRVMLogging.out.println(Level.CRITICAL, __DEFAULT_MESSAGE);",
            "\t\tRVMLogging.out.println(Level.CRITICAL, \"The length argument is out of range; \" + offset + \" + \" + length + \" > \" + buffer.length);"
